#!/bin/sh

usage()
{
   $ECHO "Usage: ishdecrypt [a|d] input-file"
   $ECHO "   a    : authenticate digital signature"
   $ECHO "   d    : decrypt"
   $ECHO ""
   $ECHO "*** Press return to continue ***"
   read ANS
}

#
# Check arguments
#

if [ -z "$1" ]
then
   usage
   exit 1
fi

#
# Make sure there is a file name
#

if [ -z "$2" ]
then
   usage
   exit 1
fi

case $1 in
   a) shift ; pgpauth.tk $* ;;
   d) pgpdec.tk $2 ;;
esac
sleep 100
exit
